{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "enabled": true,
  "schedule": ["* 9-17 * * 1-5"],
  "timezone": "Asia/Tokyo",
  "lockFileMaintenance": {
    "enabled": true
  },
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchDepTypes": ["dev", "devDependencies"],
      "automerge": true
    },
    {
      "groupName": "esbuild",
      "matchPackageNames": ["/esbuild/"]
    },
    {
      "groupName": "ex_aws",
      "matchPackageNames": ["/ex_aws/"]
    },
    {
      "groupName": "ex_cldr",
      "matchPackageNames": ["/ex_cldr/"]
    },
    {
      "groupName": "flop",
      "matchPackageNames": ["/flop/"]
    },
    {
      "groupName": "phoenix",
      "matchPackageNames": ["/phoenix/"]
    },
    {
      "groupName": "postcss",
      "matchPackageNames": ["/postcss/"]
    },
    {
      "groupName": "stylelint",
      "matchPackageNames": ["/stylelint/"]
    }
  ]
}
